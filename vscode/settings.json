{
    // Controls whether the prompt will show
"sublimeTextKeymap.promptV3Features": true,

// Changes the multi cursor mouse binding
"editor.multiCursorModifier": "ctrlCmd",

// Specifies the location of snippets in the suggestion widget
"editor.snippetSuggestions": "top",

// Controls whether format on paste is on or off
"editor.formatOnPaste": true,
"window.zoomLevel": 0,
"workbench.colorTheme": "Dracula",
"editor.fontFamily": "iosevka",
"editor.fontSize": 16,
"files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.bundle": true,
    "**/node_modules": true,
    "**/assets.hash": true,
    "**/tmp": true,
    "**/dump.rdb": true,
    "**/.byebug_history": true,
    "**/log": true,
},
"workbench.activityBar.visible": false,
"diffEditor.ignoreTrimWhitespace": false,
"files.trimTrailingWhitespace": true,
"editor.insertSpaces": true,
"editor.tabSize": 2,
"material-icon-theme.folders.theme": "specific",
"workbench.iconTheme": "seti",
"material-icon-theme.folders.color": "#666666",
"window.titleBarStyle": "hiddenInset",
"editor.lineHeight": 28,
"editor.rulers": [
    120
],
"files.insertFinalNewline": true,
"editor.showFoldingControls": "always",
"explorer.confirmDragAndDrop": false,
"javascript.updateImportsOnFileMove.enabled": "always",
"material-icon-theme.saturation": 0,
"vsicons.dontShowNewVersionMessage": true,
"git.ignoreMissingGitWarning": true,
"editor.fontLigatures": true,
"vsicons.associations.fileDefault.file": null,
"vscode_custom_css.policy": true,
// The Cursive font is operator Mono, it's $200 and you need to buy it to get the cursive
"editor.lineHeight": 30,
"editor.letterSpacing": 0.5,
"files.trimTrailingWhitespace": true,
"prettier.eslintIntegration": true,
"editor.cursorStyle": "line",
"editor.cursorBlinking": "solid",
"editor.renderWhitespace": "all",
"[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
},
"[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
},
"C_Cpp.updateChannel": "Insiders",
"latex-workshop.view.pdf.viewer": "tab",
"files.autoSave": "afterDelay",
"files.autoSaveDelay": 5000,
}
